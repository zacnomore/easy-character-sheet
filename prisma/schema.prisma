// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Sheet {
  id              Int       @default(autoincrement()) @id
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  characterName     String    @db.VarChar(255)
  classAndLevel     String    @db.VarChar(255) 
  background        String    @db.VarChar(255) 
  playerName        String    @db.VarChar(255) 
  race              String    @db.VarChar(255) 
  alignment         String    @db.VarChar(255) 
  experiencePoints  Int 
  
  strength        Int
  dexterity       Int
  constitution    Int
  intelligence    Int
  wisdom          Int
  charisma        Int

  acrobaticsValue           Int
  acrobaticsProficient      Boolean
  animalHandlingValue       Int
  animalHandlingProficient  Boolean
  arcanaValue               Int
  arcanaProficient          Boolean
  athleticsValue            Int
  athleticsProficient       Boolean
  deceptionValue            Int
  deceptionProficient       Boolean
  historyValue              Int
  historyProficient         Boolean
  insightValue              Int
  insightProficient         Boolean
  intimidationValue         Int
  intimidationProficient    Boolean
  investigationValue        Int
  investigationProficient   Boolean
  medicineValue             Int
  medicineProficient        Boolean
  natureValue               Int
  natureProficient          Boolean
  perceptionValue           Int
  perceptionProficient      Boolean
  performanceValue          Int
  performanceProficient     Boolean
  persuasionValue           Int
  persuasionProficient      Boolean
  religionValue             Int
  religionProficient        Boolean
  sleightOfHandValue        Int
  sleightOfHandProficient   Boolean
  stealthValue              Int
  stealthProficient         Boolean
  survivalValue             Int
  survivalProficient        Boolean
}